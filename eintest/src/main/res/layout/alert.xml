<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:clickable="true" android:focusable="true"
        android:background="#cc3d3d3d"
        android:visibility="gone"
        android:id="@+id/alert">
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginLeft="33.12dp"
            android:layout_marginRight="33.12dp"
            android:background="#ffffff">
        <TextView android:layout_width="match_parent" android:layout_height="25dp"
                android:paddingTop="3dp"
                android:paddingRight="10dp"
                android:gravity="end"
                android:textAlignment="gravity"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textScaleX="1.3"
                android:text="X"
                android:id="@+id/alertx"/>
        <TextView android:layout_width="match_parent" android:layout_height="30dp"
                android:gravity="center_horizontal|top"
                android:textColor="#000000"
                android:textSize="16sp"
                android:id="@+id/alerttitle"/>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                android:maxHeight="300dp"
                android:padding="20dp"
                android:textSize="14sp"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="#000000"
                android:id="@+id/alertmsg">
        </TextView>
        <View android:layout_width="match_parent" android:layout_height="1dp"
              android:id="@+id/alertline"/>
        <TextView android:layout_width="match_parent" android:layout_height="45dp"
                android:gravity="center_horizontal|center_vertical"
                android:textColor="#000000"
                android:textSize="16sp"
                android:text="Ok"
                android:id="@+id/alertok"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>